{% if template == 'product.country-city' %}
<div class="selector-wrapper js product-form__item">
   <label for="address_country_new">{{ 'customer.addresses.country' | t }}</label>
   <select id="address_country_new" class="single-option-selector single-option-selector-product-template product-form__input" name="properties[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
</div>
<div class="selector-wrapper js product-form__item">
   <label for="address_province_new">{{ 'customer.addresses.province' | t }}</label>
   <select id="address_province_new" class="single-option-selector single-option-selector-product-template product-form__input" name="properties[province]" data-default="{{form.province}}"></select>
</div>
<div class="selector-wrapper js product-form__item">
   <label for="address_city_new">City</label>
   <input id="address_city_new" class="single-option-selector single-option-selector-product-template product-form__input" name="properties[city]">
</div>
{% endif %}

{{ 'shopify_common.js' | shopify_asset_url | script_tag }}
<script>
  // Initialize observers on address selectors
  new Shopify.CountryProvinceSelector('address_country_new', 'address_province_new', {
    hideElement: 'address_province_container_new'
  });
</script>
